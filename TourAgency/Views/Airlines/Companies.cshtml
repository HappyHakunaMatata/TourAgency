@using TourAgency.Models
@model List<Aircompany>
@{
    ViewData["Title"] = "Home page";
    int counter = 3;
    var value = Model.GroupBy(_ => counter++ / 3);
}

<div>
    <h1 id="Services">Авиакомпании</h1>
</div>
<hr class="hr--half" />
@foreach (var i in value)
    {
        foreach (var j in i)
        {
        <div class="col-lg-4">
            <div class="bs-component">
                <div class="card border-yeallow-cream bg-blur mb-3" style="max-width: 50rem;">
                    <a href="@j.link">
                        <img src="/img/Airlines/@(String.Format("{0}.jpeg", @j.logo))" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle" />
                    </a>
                </div>
            </div>
        </div>
        }
    }